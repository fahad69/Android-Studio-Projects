<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="280dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/planList"
    app:cardCornerRadius="10dp"
    android:padding="5dp"
    android:layout_margin="15dp"
    app:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/trainingName1"
            android:text="Training Name"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/filledCheckBox"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:visibility="gone"
            android:src="@drawable/ic_filled"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/emptyCheckBox"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:visibility="gone"
            android:src="@drawable/ic_empty"/>


        <ImageView
            android:layout_width="280dp"
            android:layout_height="150dp"
            android:id="@+id/trainingImage1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/trainingName1"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/trainingTime"
            android:text="Time: Zero Minutes"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/trainingImage1"
            android:layout_centerHorizontal="true"
            android:padding="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/trainingShortDescription1"
            android:text="Short Description"
            android:textStyle="italic"
            android:textSize="15sp"
            android:layout_below="@+id/trainingTime"
            android:layout_centerHorizontal="true"
            android:padding="10dp"/>


    </RelativeLayout>

</androidx.cardview.widget.CardView>